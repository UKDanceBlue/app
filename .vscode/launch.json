{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "GraphQL: Watch Portal",
      "request": "launch",
      "runtimeArgs": ["run", "gql:watch:portal"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "presentation": {
        "group": "2graphql"
      },
      "autoAttachChildProcesses": false
    },
    {
      "name": "GraphQL: Watch Mobile",
      "request": "launch",
      "runtimeArgs": ["run", "gql:watch:mobile"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "presentation": {
        "group": "2graphql"
      },
      "autoAttachChildProcesses": false
    },
    {
      "name": "Common: Watch",
      "request": "launch",
      "runtimeArgs": ["run", "common:watch"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "presentation": {
        "group": "3shared"
      },
      "autoAttachChildProcesses": false
    },
    {
      "name": "Server: Start",
      "request": "launch",
      "runtimeArgs": ["run", "server:start"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "presentation": {
        "group": "6server"
      },
      "console": "integratedTerminal",
      "preLaunchTask": "Server: Build"
    },
    {
      "name": "Server: Open Prisma Studio",
      "request": "launch",
      "runtimeArgs": ["run", "server:prisma", "studio"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "presentation": {
        "group": "6server"
      },
      "autoAttachChildProcesses": false
    },
    {
      "name": "Portal: Dev",
      "request": "launch",
      "runtimeArgs": ["run", "portal:dev"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "presentation": {
        "group": "5portal"
      },
      "autoAttachChildProcesses": false
    },
    {
      "name": "Mobile: Start",
      "request": "launch",
      "runtimeArgs": ["run", "mobile:start"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "presentation": {
        "group": "4mobile"
      },
      "env": {
        "REACT_NATIVE_PACKAGER_HOSTNAME": "0.0.0.0"
      },
      "autoAttachChildProcesses": false
    },
    {
      "name": "Debug Portal (firefox)",
      "request": "launch",
      "type": "firefox",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/packages/portal/src",
      "presentation": {
        "group": "5portal"
      }
    },
    {
      "name": "Debug Portal (chrome)",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/packages/portal/src",
      "presentation": {
        "group": "5portal"
      }
    },
    {
      "name": "Debug Expo",
      "request": "attach",
      "type": "reactnativedirect",
      "cwd": "${workspaceFolder}/packages/mobile",
      "presentation": {
        "group": "4mobile"
      }
    }
  ],
  "compounds": [
    {
      "name": "Dev Environment: Base",
      "configurations": [
        "Common: Watch",
        "GraphQL: Watch Portal",
        "GraphQL: Watch Mobile"
      ],
      "presentation": {
        "group": "0dev-enviroment",
        "order": 3
      }
    },
    {
      "name": "Dev Environment: Server",
      "configurations": ["Server: Start", "Common: Watch"],
      "preLaunchTask": "Server: Prisma Generate",
      "presentation": {
        "group": "0dev-enviroment",
        "order": 2
      }
    },
    {
      "name": "Dev Environment: Portal",
      "configurations": [
        "Server: Start",
        "Portal: Dev",
        "Common: Watch",
        "GraphQL: Watch Portal"
      ],
      "presentation": {
        "group": "0dev-enviroment",
        "order": 2
      }
    },
    {
      "name": "Dev Environment: Mobile",
      "configurations": [
        "Server: Start",
        "Mobile: Start",
        "Common: Watch",
        "GraphQL: Watch Mobile"
      ],
      "presentation": {
        "group": "0dev-enviroment",
        "order": 2
      }
    },
    {
      "name": "Dev Environment: *",
      "configurations": [
        "Server: Start",
        "Portal: Dev",
        "Mobile: Start",
        "Common: Watch",
        "GraphQL: Watch Portal",
        "GraphQL: Watch Mobile"
      ],
      "preLaunchTask": "Server: Prisma Generate",
      "presentation": {
        "group": "0dev-enviroment",
        "order": 1
      }
    }
  ]
}

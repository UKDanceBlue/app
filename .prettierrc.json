{
  "arrowParens": "always",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "embeddedLanguageFormatting": "auto",
  "printWidth": 80,
  "proseWrap": "always",
  "quoteProps": "consistent",
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "endOfLine": "auto",
  "trailingComma": "es5",
  "overrides": [
    {
      "files": ["./packages/mobile/**/*"],
      "options": {
        "plugins": ["prettier-plugin-tailwindcss"],
        "tailwindConfig": "./packages/mobile/tailwind.config.js",
        "tailwindFunctions": ["tva"]
      }
    }
  ]
}

{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "paths": {
      "@config/*": ["config/*"],
      "@elements/*": ["elements/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@routing/*": ["routing/*"],
      "@tools/*": ["tools/*"],
      "@assets/*": ["../assets/*"],
      "@documents/*": ["documents/*"],
      "@graphql/*": ["../graphql/*"]
    },

    "baseUrl": "./src"
  },
  "include": ["src", "graphql"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "extends": "../../tsconfig.json"
}

{
  "compilerOptions": {
    "noEmit": false,
    "incremental": true,
    "lib": ["ES2022"],
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "types": [
      "body-parser",
      "cookie-parser",
      "cors",
      "ejs",
      "express",
      "express-session",
      "http-errors",
      "jsonwebtoken",
      "luxon",
      "multer",
      "node-fetch",
      "normalize-path",
      "qs",
      "ws"
    ]
  },
  "include": ["src"],
  "extends": "../../tsconfig.json"
}

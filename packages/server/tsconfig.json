{
  "compilerOptions": {
    "noEmit": false,
    "incremental": true,
    "lib": ["ES2022"],
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "#auth/*": ["./src/lib/auth/*"],
      "#error/*": ["./src/lib/error/*"],
      "#files/*": ["./src/lib/files/*"],
      "#logging/*": ["./src/lib/logging/*"],
      "#notification/*": ["./src/lib/notification/*"],
      "#lib/*": ["./src/lib/*"],
      "#jobs/*": ["./src/jobs/*"],
      "#repositories/*": ["./src/repositories/*"],
      "#resolvers/*": ["./src/resolvers/*"],
      "#routes/*": ["./src/routes/*"],
      "#environment": ["./src/environment.ts"]
    }
  },
  "include": ["src"],
  "extends": "../../tsconfig.json"
}

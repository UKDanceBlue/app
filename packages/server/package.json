  "type": "module",
  "imports": {
    "#auth/*.js": "./dist/lib/auth/*.js",
    "#environment": "./dist/environment.js",
    "#error/*.js": "./dist/lib/error/*.js",
    "#files/*.js": "./dist/lib/files/*.js",
    "#jobs/*.js": "./dist/jobs/*.js",
    "#lib/*.js": "./dist/lib/*.js",

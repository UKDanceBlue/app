    "#resolvers/*.js": "./dist/resolvers/*.js",
    "#routes/*.js": "./dist/routes/*.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "bs": "yarn run build && yarn run start",
    "build": "tsc",
    "check": "tsc --noEmit",
    "dev": "tsc --watch & node --watch . --watch-path=./dist",
    "lint": "eslint .",
    "migrate-and-start": "yarn dlx prisma migrate deploy && yarn run start",
    "start": "node --enable-source-maps .",
    "start-reset": "node . --reset-db",
    "start-seed": "node . --seed-db --reset-db",
    "test": "jest"
  },

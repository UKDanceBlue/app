model Image {
  id                    Int                    @id @default(autoincrement())
  uuid                  String                 @unique(map: "Image_uuid_unique") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt             DateTime               @default(now()) @db.Timestamptz(6)
  updatedAt             DateTime               @updatedAt @db.Timestamptz(6)
  thumbHash             Bytes?
  alt                   String?
  width                 Int
  height                Int
  fileId                Int?
  eventImages           EventImage[]
  feedItems             FeedItem[]
  file                  File?                  @relation(fields: [fileId], references: [id], map: "Image_fileId_File_id_fk")
  marathonHourMapImages MarathonHourMapImage[]
}

model File {
  id              Int      @id @default(autoincrement())
  uuid            String   @unique(map: "File_uuid_unique") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  filename        String
  mimeTypeName    String   @db.VarChar(127)
  mimeSubtypeName String   @db.VarChar(127)
  mimeParameters  String[]
  locationUrl     String
  requiresLogin   Boolean  @default(false)
  ownedBy         Int?
  createdAt       DateTime @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime @updatedAt @db.Timestamptz(6)
  owner           Person?  @relation(fields: [ownedBy], references: [id], map: "File_ownedBy_Person_id_fk")
  images          Image[]
}

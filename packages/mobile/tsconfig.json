{
  "compilerOptions": {
    // Just let Metro handle the module resolution and bundling
    "module": "preserve",
    "moduleResolution": "bundler",
    "paths": {
      "@graphql/*": ["./src/graphql/*"],
      "@common/*": ["./src/common/*"],
      "@context/*": ["./src/context/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@theme/*": ["./src/theme/*"],
      "@common-types/*": ["./src/types/*"]
    },
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "resolvePackageJsonExports": true,
    "target": "es2019",
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.date",
      "es2020.number",
      "es2020.promise",
      "es2020.string",
      "es2020.symbol.wellknown",
      "es2021.promise",
      "es2021.string",
      "es2021.weakref",
      "es2022.array",
      "es2022.object",
      "es2022.string"
    ],
    "outDir": "dist",
    "noEmit": false
  },
  "extends": ["../../tsconfig.json", "./node_modules/expo/tsconfig.base.json"],
  "include": [
    "index.js",
    "App.tsx",
    "global.d.ts",
    "src",
    "assets",
    "graphql",
    "config-plugins",
    "test-helpers"
  ]
}

{
  "name": "@ukdanceblue/monorepo",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/UKDanceBlue/monorepo.git"
  },
  "license": "MPL-2.0",
  "author": {
    "name": "University of Kentucky DanceBlue Tech Committee",
    "email": "app@danceblue.org",
    "url": "https://danceblue.org"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "common:build": "yarn workspace @ukdanceblue/common run build",
    "common:watch": "yarn workspace @ukdanceblue/common run watch",
    "docker:server:start": "docker-compose up -d --build",
    "docker:server:stop": "docker-compose down",
    "gql:build": "graphql-codegen-esm --config codegen.ts && tsx scripts/fix-codegen.ts && eslint packages/mobile/src/graphql packages/portal/graphql --fix || prettier --write packages/mobile/src/graphql packages/portal/graphql",
    "gql:watch": "chokidar \"packages/mobile/src/**/*\" \"packages/portal/src/**/*\" --ignore \"packages/mobile/src/graphql/**/*\" --initial --silent --verbose --command \"yarn gql:build\"",
    "postinstall": "yarn constraints",
    "mobile:check": "yarn workspace @ukdanceblue/mobile check && echo 'Mobile \t\tOK'",
    "mobile:start": "yarn workspace @ukdanceblue/mobile start",
    "portal:build": "yarn workspace @ukdanceblue/portal build",
    "portal:check": "yarn workspace @ukdanceblue/portal check && echo 'Portal \t\tOK'",
    "portal:dev": "yarn workspace @ukdanceblue/portal dev",
    "repo:check": "yarn repo:lint && yarn repo:format && yarn server:check && yarn portal:check && yarn mobile:check",
    "repo:check:fix": "yarn repo:lint:fix && yarn repo:format:fix && yarn server:check && yarn portal:check && yarn mobile:check",
    "repo:coverage": "vitest run --coverage",
    "repo:coverage-browser": "vitest run --coverage --reporter html && yarn dlx vite preview --outDir html",
    "repo:format": "prettier --check --log-level warn . && echo 'Prettier \tOK'",
    "repo:format:fix": "prettier --write --log-level warn . && echo 'Prettier \tOK'",
    "repo:lint": "eslint . && echo 'ESLint \t\tOK'",
    "repo:lint:fix": "eslint --fix . && echo 'ESLint \t\tOK'",
    "repo:lint:view-config": "yarn dlx @eslint/config-inspector@latest",
    "repo:lint:report": "eslint --output-file eslint_report.json --format json .",
    "repo:licenses:gen-disclaimer": "yarn licenses generate-disclaimer -R > DISCLAIMER",
    "repo:licenses:check": "yarn licenses audit --allowed MIT --allowed Beerware --allowed MPL-2.0 --allowed BSD-3-Clause --allowed BSD-2-Clause --allowed Apache-2.0",
    "repo:sort-package-json": "yarn dlx sort-package-json package.json ./packages/*/package.json",
    "repo:test": "vitest",
    "repo:test-ui": "vitest --ui --coverage",
    "server:bs": "yarn workspace @ukdanceblue/server run bs",
    "server:build": "yarn workspace @ukdanceblue/server run build",
    "server:check": "yarn workspace @ukdanceblue/server run check && echo 'Server \t\tOK'",
    "server:dev": "yarn workspace @ukdanceblue/server run dev",
    "server:prisma": "yarn workspace @ukdanceblue/server prisma",
    "server:prisma-generate": "yarn workspace @ukdanceblue/server prisma generate",
    "server:start": "yarn workspace @ukdanceblue/server run start"
  },
  "resolutions": {
    "promise": "npm:promise@^8.3.0",
    "urijs": "npm:uri-js-replace"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.1",
    "@eslint/config-inspector": "^0.5.6",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@expo/ngrok": "^4.1.3",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/client-preset": "patch:@graphql-codegen/client-preset@npm%3A4.3.3#~/.yarn/patches/@graphql-codegen-client-preset-npm-4.3.3-ec8a799259.patch",
    "@parcel/watcher": "^2.4.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/eslint__js": "^8.42.3",
    "@types/react": "~18.3.11",
    "@types/react-dom": "~18.3.1",
    "@vitest/coverage-v8": "^2.1.3",
    "@vitest/ui": "^2.1.3",
    "@yarnpkg/types": "^4.0.0",
    "babel-cli": "^6.26.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.13.0",
    "eslint-config-next": "^14.2.15",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^50.4.3",
    "eslint-plugin-n": "^17.11.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^56.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.11.0",
    "graphql": "^16.9.0",
    "graphql-scalars": "^1.23.0",
    "node-gyp": "^10.2.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0",
    "vitest": "^2.1.3"
  },
  "packageManager": "yarn@4.1.1+sha256.f3cc0eda8e5560e529c7147565b30faa43b4e472d90e8634d7134a37c7f59781"
}
